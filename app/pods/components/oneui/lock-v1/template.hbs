<div class="block block-themed animated bounceIn">
  <div class="block-header bg-primary">
    <ul class="block-options">
      <li>
        <a href="" data-placement="left" title="Log in with another account" {{action (optional onLogout)}}>
          {{fa-icon "sign-in"}}
        </a>
      </li>
    </ul>

    <h3 class="block-title">Account Locked</h3>
  </div>

  <div class="block-content block-content-full block-content-narrow">
    <div class="text-center push-15-t push-15">
      <img class="img-avatar img-avatar96" src="/assets/img/avatars/avatar-0.jpg">

      <h4>{{user.name}}</h4>
    </div>

    <form class="js-validation-lock form-horizontal push-30-t push-30" {{action "unlock" on="submit"}}>
      {{#if _errorMessage}}
        <div class="form-group">
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
            {{#bs-alert type="danger"}}
              {{_errorMessage}}
            {{/bs-alert}}
          </div>
        </div>
      {{/if}}

      <fieldset disabled={{disabled}}>
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
          {{oneui/forms/oneui-input
            errors=_validationErrors.password
            value=_password
            label="Password"
            placeholder="Please enter your password"
            type="password"
            autofocus=true
          }}
        </div>

        <div class="form-group">
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <button class="btn btn-block btn-default" type="submit">
              {{fa-icon "unlock-alt" class="pull-right"}} Unlock
            </button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>