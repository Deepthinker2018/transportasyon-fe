{{#bs-modal
  backdropClose=(not disabled)
  open=open
  size=size
  onHidden=(pipe-action (action (mut open) false) (action (optional onHidden)))
  onSubmit=(action onSubmit) as |modal|
}}
  {{#oneui/oneui-panel class="block-transparent" as |panel|}}
    {{#panel.header type="primary-dark"}}
      <ul class="block-options">
        <li>
          <button {{action modal.close}} disabled={{disabled}}>
            {{fa-icon "close"}}
          </button>
        </li>
      </ul>

      <h3 class="block-title">{{title}}</h3>
    {{/panel.header}}

    {{#panel.content}}
      {{yield modal}}
    {{/panel.content}}
  {{/oneui/oneui-panel}}

  {{#modal.footer}}
    {{#bs-button onClick=(action modal.submit) disabled=disabled type="primary"}}
      {{yesCaption}}
    {{/bs-button}}

    {{#bs-button onClick=(action modal.close) disabled=disabled}}
      {{noCaption}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}