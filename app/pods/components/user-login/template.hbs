<div class="text-center">
  <i class="fa fa-2x fa-circle-o-notch text-primary"></i>
  <p class="text-muted push-15-t">Transportasyon</p>
</div>

{{#if errorMessage}}
  {{#bs-alert
    class="animated fadeIn"
    type="danger"
    dismissible=false
  }}
    {{fa-icon "warning"}}
    {{errorMessage}}
  {{/bs-alert}}
{{/if}}

{{#mainui/mainui-form onSubmit=(action "login") class="form-horizontal push-30-t" as |form|}}
  <fieldset disabled={{disabled}}>
    <div class="form-group">
      <div class="col-xs-12">
        {{form.mdInput
          autofocus=true
          errors=errors.username
          label="Email"
          value=username
        }}
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        {{form.mdInput
          autofocus=true
          errors=errors.password
          label="Password"
          type="password"
          value=password
        }}
      </div>
    </div>
    <div class="form-group push-30-t">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <button class="btn btn-sm btn-block btn-primary" type="submit">
          {{#if disabled}}
            {{fa-icon "spinner" class="push-5-r" fixWidth=true spin=true}}
          {{else }}
            {{fa-icon "sign-in" class="push-5-r" fixWidth=true}}
          {{/if}}
          Log in
          }
        </button>
      </div>
    </div>
  </fieldset>
{{/mainui/mainui-form}}